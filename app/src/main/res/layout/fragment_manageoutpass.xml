<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:id="@+id/layout_manageop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/enrollmentop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENROLLMENT:"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/roomop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROOM NO:"
                android:layout_marginTop="10dp"
                android:textColor="@color/Black"
                android:layout_below="@+id/enrollmentop"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/leavingdateop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/roomop"
                android:text="LEAVING DATE: "
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/returningdateop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/leavingdateop"
                android:textColor="@color/Black"
                android:text="RETURNING DATE: "
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/placeop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/returningdateop"
                android:textColor="@color/Black"
                android:text="PLACE: "
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/reasonop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/placeop"
                android:textColor="@color/Black"
                android:text="REASON: "
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/phonenumberop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/reasonop"
                android:textColor="@color/Black"
                android:text="PHONE NUMBER: "
                android:textStyle="bold"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/enrollmentfetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enrollment"
                android:textStyle="bold"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/White"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/enrollmentop"
                android:layout_toEndOf="@+id/enrollmentop" />
            <TextView
                android:id="@+id/roomnumberfetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Room No"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:layout_below="@+id/enrollmentop"
                android:layout_toRightOf="@+id/roomop"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/leavingdatefetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Leaving Date"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:layout_below="@+id/roomop"
                android:layout_toRightOf="@+id/leavingdateop"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/returningdatefetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Returning Date"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/leavingdateop"
                android:layout_toRightOf="@+id/returningdateop"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/placefetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Place"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/returningdateop"
                android:layout_toRightOf="@+id/placeop"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/reasonfetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Reason"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/placefetch"
                android:layout_toRightOf="@+id/reasonop"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/phonenumberfetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_below="@+id/reasonfetch"
                android:layout_toRightOf="@+id/phonenumberop"
                android:layout_marginTop="10dp" />


        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorRed"
        android:layout_below="@+id/layout_manageop">

    </View>
</RelativeLayout>